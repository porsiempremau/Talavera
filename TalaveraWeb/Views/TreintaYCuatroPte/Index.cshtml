
@{
    ViewBag.Title = "Index";
}

<h2>34 Poniente</h2>

<content>    
    <div class="row encabezado">
        <h4 class="col-4">Barro en Granel</h4>
        <div class="col-8 text-right">
            @Html.ActionLink("Solicitar barro en granel", "SolicitarBarroGranel")
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Tipo</th>
                <th>Total en Kg</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.lstBarroGranel34pte)
            {
                <tr>
                    <td>@item.Tipo</td>
                    <td>@item.TotalKg</td>
                </tr>
            }
        </tbody>
    </table>
</content>

<content>   
    <div class="row encabezado">
        <h4 class="col-4">Barro empaquetado</h4>
        <div class="col-8 text-right">
            @Html.ActionLink("Empaquetar barro", "SolicitarBarroEmpaque")           
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Tipo</th>
                <th>Paquete Kg</th>
                <th>Unidades</th>
                <th>Total en Kg</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.lstBarroEmpaque34pte)
            {
                <tr>
                    <td>@item.Tipo</td>
                    <td>@item.Capacidad</td>
                    <td>@item.Unidades</td>
                    <td>@item.TotalKg</td>
                </tr>
            }
        </tbody>
    </table>
</content>

<content>
    <p style="margin-top:2rem; margin-bottom:2rem">
        @Html.ActionLink("Preparación de barro", "Index", "PreparacionBarro", new { pLoc = 2 }, null)  -  @Html.ActionLink("Preparación en fuentes", "Index", "PreparacionPellas", new { pLoc = 2 }, null)
    </p>
</content>

<content>    
    <h4 class="encabezado">Pellas de barro</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Pellas</th>
                <th>Unidades</th>
                <th>Total en Kg</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.lstPellas)
            {
                <tr>
                    <td>@item.Tipo</td>
                    <td>@item.Unidades</td>
                    <td>@item.TotalKg</td>
                </tr>
            }            
        </tbody>
    </table>
</content>

