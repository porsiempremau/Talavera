
@{
    ViewBag.Title = "Index";
}

<h2>34 Poniente</h2>

<content>    
    <div class="row encabezado">
        <h4 class="col-4">Barro en Granel</h4>
        <div class="col-8 text-right">
            @Html.ActionLink("Solicitar barro en granel", "SolicitarBarroGranel") - 
            @Html.ActionLink("Historial", "Historial")
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Tipo</th>
                <th>Total en Kg</th>
                <th class="text-primary">Suma Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.lstBarroGranel34pte)
            {
                <tr>
                    <td>@item.Tipo</td>
                    <td>@item.TotalKg</td>
                    <td class="text-primary">@ViewData[item.Tipo]</td>
                </tr>
            }
        </tbody>
    </table>
</content>

<content>   
    <div class="row encabezado">
        <h4 class="col-4">Barro empaquetado</h4>
        <div class="col-8 text-right">
            @Html.ActionLink("Empaquetar barro", "SolicitarBarroEmpaque")           
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Tipo</th>
                <th>Paquete Kg</th>
                <th>Unidades</th>
                <th>Total en Kg</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.lstBarroEmpaque34pte)
            {
                <tr>
                    <td>@item.Tipo</td>
                    <td>@item.Capacidad</td>
                    <td>@item.Unidades</td>
                    <td>@item.TotalKg</td>
                </tr>
            }
        </tbody>
    </table>
</content>



<content>
    @if (ViewBag.lstBarroEmpaque34pte.Count == 0)
    {
        <p style="margin-top:2rem; margin-bottom:2rem">
            @Html.Label("Preparación de barro", new { style = "color: gray" })
        </p>
    }
    else
    {
        <p style="margin-top:2rem; margin-bottom:2rem">
            @Html.ActionLink("Preparación de barro", "Index", "PreparacionBarro", new { pLoc = 2 }, null)
        </p>
    }
</content>



<content>    
    <div class="row encabezado">
        <h4 class="col-4">Pellas barro</h4>
        <div class="col-8 text-right">
            @Html.ActionLink("Historial de cargas", "Index", "PreparacionPellas", new { pLoc = 2 }, null) -
            @Html.ActionLink("Movimientos", "Movimientos", "SolicitarPellas", new { pLoc = 2 }, null)                         
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Pellas</th>
                <th>Unidades</th>
                <th>Total en Kg</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.lstPellas)
            {
                <tr>
                    <td>@item.Tipo</td>
                    <td>@item.Unidades</td>
                    <td>@item.TotalKg</td>
                </tr>
            }            
        </tbody>
    </table>
</content>

